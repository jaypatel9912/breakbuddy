<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:elevation="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:background="@mipmap/ic_main_bg_short"
        android:orientation="vertical"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_160sdp">

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="match_parent"
            android:text="Name"
            android:gravity="right"
            android:textSize="@dimen/_15sdp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="match_parent"
            android:text="Name"
            android:textColor="@android:color/white"
            android:gravity="right"
            android:textSize="@dimen/_12sdp"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/llChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_main_items"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@mipmap/ic_password"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_19sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCP"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center|left"
            android:text="@string/opt_cp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/llChangeEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_main_items"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@mipmap/ic_mail"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/fa_smile_o"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_19sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCE"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center|left"
            android:text="@string/opt_cemail"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:id="@+id/llLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_main_items"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tvIcAddme"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:src="@mipmap/ic_sign_out"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/fa_smile_o"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_19sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCL"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:gravity="center|left"
            android:text="@string/opt_logout"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

    </LinearLayout>
        </LinearLayout>

</LinearLayout>