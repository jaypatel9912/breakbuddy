<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_3sdp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_weight="1"
            android:text="ssfs"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corner_main_item_green"
            android:gravity="center"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:padding="@dimen/_3sdp"
            android:text="@string/fa_check"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_3sdp"
            android:background="@drawable/rounded_corner_main_item_red"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="@string/fa_close"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/tvAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@color/other_main_blue_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_2sdp"
            android:text="@string/invite"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13sdp"
            android:textStyle="normal"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>