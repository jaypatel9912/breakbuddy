<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_10sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_140sdp"
        android:background="@mipmap/ic_main_bg_short"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llContactUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/rounded_corner_main_items"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tvIcAddme"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@mipmap/ic_support"
                android:text="@string/fa_smile_o"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_19sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPopContactUs"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="center|left"
                android:text="@string/opt_contactUs"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_72sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/rounded_corner_signature_bg"
            android:padding="@dimen/_2sdp"
            android:src="@mipmap/ic_signature" />


    </LinearLayout>


</LinearLayout>