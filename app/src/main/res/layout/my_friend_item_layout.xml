<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/main_dialog_ll_bg_alpha"
            android:gravity="center"
            android:tag="Bottom2">

            <TextView
                android:id="@+id/tvSchedule"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/round_schedule_green"
                android:gravity="center"
                android:text="@string/fa_clock_o"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tvCall"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/rounded_contact_blue"
                android:gravity="center"
                android:text="@string/fa_phone"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/rounded_contact_blue"
                android:gravity="center"
                android:text="@string/fa_comments"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvTrash"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/round_aaded_me_drawable"
                android:gravity="center"
                android:text="@string/fa_trash_o"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="start"
                android:lines="1"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:text="Dhaval"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/half_rounded_blue_color"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tvArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_1sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingTop="@dimen/_1sdp"
                    android:text="@string/fa_angle_right"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_24sdp"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>


</LinearLayout>