<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_38sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvFriendsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="4"
                android:ellipsize="end"
                android:text="ssfs"
                android:gravity="left|center_vertical"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_14sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvBreakTimeOnline"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="5"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:text="9:00 PM - 9:30 PM"
                android:textColor="@color/online_green"
                android:textSize="@dimen/_8sdp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSchedule"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/rounded_corner_new_bluw"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="@string/fa_clock_o"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvCall"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/rounded_corner_new_bluw"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="@string/fa_phone"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@drawable/rounded_corner_new_bluw"
            android:gravity="center"
            android:padding="@dimen/_3sdp"
            android:text="@string/fa_comments"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>